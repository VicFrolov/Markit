<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_item_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.markit.android.ItemDetail"
    tools:showIn="@layout/activity_item_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uidTitle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cast_album_art_placeholder"
            android:id="@+id/imageItemDetail" />

        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionItemDetail" />

        <TextView
            android:text="Tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagsItemDetail" />

        <TextView
            android:text="price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceItemDetail" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Add To Watch List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToWatch"
                android:layout_weight="1" />

            <Button
                android:text="Buy Item List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buyItem"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
